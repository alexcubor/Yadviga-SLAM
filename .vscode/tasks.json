{
    "version": "2.0.0",
    "tasks": [
        // =============================================
        // Emscripten Build Tasks
        // =============================================
        {
            "label": "Set Emscripten Script Permissions",
            "type": "shell",
            "command": "chmod +x ./ThirdParty/emsdk/build_emsdk.sh",
            "group": "build",
            "presentation": {
                "clear": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Emscripten",
            "type": "shell",
            "command": "./ThirdParty/emsdk/build_emsdk.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "dependsOn": "Set Emscripten Script Permissions"
        },

        // =============================================
        // OpenCV Build Tasks
        // =============================================
        {
            "label": "Build OpenCV",
            "type": "shell",
            "command": "./ThirdParty/opencv/build_opencv.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "showReuseMessage": false,
                "close": false,
                "group": "buildOpenCV"
            },
            "problemMatcher": [],
            "dependsOn": "Build Emscripten"
        },

        // =============================================
        // Project Build Tasks
        // =============================================
        {
            "label": "Clean Build Directory",
            "type": "shell",
            "command": "rm -rf build && mkdir build",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "clear": true,
                "panel": "shared"
            }
        },
        {
            "label": "Configure CMake with Emscripten",
            "type": "shell",
            "command": "emcmake cmake .. -DCMAKE_CXX_FLAGS=\"-msimd128\"",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "panel": "shared"
            },
            "dependsOn": "Clean Build Directory"
        },
        {
            "label": "Build Yadviga",
            "type": "shell",
            "command": "emmake make -j4 && cp yadviga-slam.js ../web/ || echo 'Failed to copy yadviga-slam.js'",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "presentation": {
                "panel": "shared"
            },
            "dependsOn": "Configure CMake with Emscripten"
        },
        {
            "label": "Start Web Server",
            "type": "shell",
            "command": "lsof -ti:3001 || (cd web && python3 -m http.server 3001)",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Serving HTTP on .* port 3001",
                    "endsPattern": "Serving HTTP on .* port 3001"
                }
            },
            "presentation": {
                "panel": "shared",
                "close": true
            },
            "options": {
                "env": {
                    "PYTHONUNBUFFERED": "1"
                }
            }
        }
    ]
}